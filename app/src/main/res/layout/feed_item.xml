<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:paddingRight="0dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/feed_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Godzilla sighted in New York City, evacuate everyone immediately!"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:textSize="17dp"/>

        <TextView
            android:id="@+id/feed_item_subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8 hrs &#8226; dailymail.com"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:textColor="@color/abc_secondary_text_material_light"/>

        <TextView
            android:id="@+id/feed_item_subtitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="143 points &#8226; 38 comments"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:textColor="@color/abc_secondary_text_material_light"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/feed_item_thumbnail"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:padding="10dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:src="@drawable/ic_broken_image_black_24dp"/>
</LinearLayout>